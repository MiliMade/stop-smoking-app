<%- include('partials/header') -%>

  <body>
    <!-- component -->
    <div class="bg-white dark:bg-gray-900 py-20">      
          <div class="flex items-center h-screen w-full max-w-md px-6 mx-auto lg:w-2/6">
              <div class="flex-1">
                  <div class="text-center">
                      <div class="flex align-middle justify-center">
                        <h2 class="inline text-4xl font-bold text-center text-gray-700 dark:text-white">Log In</h2>
                      </div>
                      <p class="mt-3 text-gray-500 dark:text-gray-300">Sign in to access your account</p>
                  </div>

                  <div class="mt-8">
                      <% if (locals.messages.errors) { %> 
                        <% messages.errors.forEach( el => { %>
                          <div class="alert alert-danger"><%= el.msg %></div>
                        <% }) %> 
                      <% } %> 
                      
                      <% if (locals.messages.info) { %> 
                        <% messages.info.forEach( el => { %>
                          <div class="alert alert-info"> <%= el.msg %> </div>
                        <% }) %> 
                      <% } %>
                      
                      <form action="/login" method="POST">
                          <div>
                              <label 
                                for="exampleInputEmail1" 
                                class="form-label block mb-2 text-sm text-gray-600 dark:text-gray-200">
                                Email Address
                              </label>

                              <input 
                                type="email" 
                                name="email" 
                                id="exampleInputEmail1" 
                                aria-describedby="emailHelp" 
                                placeholder="example@example.com" 
                                class="form-control block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" 
                              />
                          </div>

                          <div class="mt-6">
                              <div class="flex justify-between mb-2">
                                  <label 
                                    for="exampleInputPassword1" 
                                    class="form-label text-sm text-gray-600 dark:text-gray-200">
                                    Password
                                  </label>
                                  <a href="#" class="text-sm text-gray-400 focus:text-blue-500 hover:text-blue-500 hover:underline">Forgot password?</a>
                              </div>

                              <input 
                                type="password" 
                                name="password" 
                                id="exampleInputPassword1" 
                                placeholder="Your Password" 
                                class="form-control block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" 
                              />
                          </div>

                          <div class="mt-6">
                              <button
                                  class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                                  Sign in
                              </button>
                          </div>

                      </form>

                      <p class="mt-6 text-sm text-center text-gray-400">Don&#x27;t have an account yet? <a href="../signup" class="text-blue-500 focus:outline-none focus:underline hover:underline">Sign up</a>.</p>
                  </div>
              </div>
          </div>
      </div>
    </div>
  
