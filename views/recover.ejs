<%- include('partials/header') -%>

  <div class="bg-white dark:bg-gray-900">
    <div class="flex items-center h-screen w-full max-w-md px-6 mx-auto lg:w-2/6">
            <div class="flex-1">
                  <div class="text-center">
                      <div class="flex align-middle justify-center">
                        <h2 class="inline text-4xl font-bold text-center text-gray-700 dark:text-white">Reset Password</h2>
                      </div>
                      <p class="mt-3 text-gray-500 dark:text-gray-300">Enter your email below and click submit to receive a password reset link to the email on file.</p>
                  </div>
               <div class="mt-8">    
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el=> { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>
        <% } %>
                        <form class="dark:text-white" action="/recover" method="POST">
                            <input type="email" name="email" placeholder="Email" class="form-control block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" >
                            <br>
                            <button type="submit" 
                            class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                            Submit</button>
                        </form>
                        <br>
                        <br>
                                <a href="/login" class="flex justify-center mt-5 w-full px-4 py-2 tracking-wide text-blue transition-colors duration-200 transform bg-white rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50">Return to Log In</a>

    </div>
    </div>
    </div>